  "scripts": {
    "bootstrap": "lerna bootstrap --no-ci",
    "bootstrap:ci": "lerna bootstrap --ci",
    "bootstrap:ci:api": "lerna bootstrap --ci --include-dependents --include-dependencies --scope @ceres/api",
